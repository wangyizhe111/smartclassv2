<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CourseMapper">

    <resultMap type="Course" id="CourseResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="description"    column="description"    />
        <result property="coverImage"    column="cover_image"    />
        <result property="credit"    column="credit"    />
        <result property="courseType"    column="course_type"    />
        <result property="startTime"    column="start_time"    />
        <result property="endTime"    column="end_time"    />
        <result property="teacherUserId"    column="teacher_user_id"    />
        <result property="status"    column="status"    />
        <result property="term"    column="term"    />
        <result property="studentCount"    column="student_count"    />
        <result property="averageScore"    column="average_score"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="isDeleted"    column="is_deleted"    />
        <result property="deleteTime"    column="delete_time"    />
    </resultMap>

    <sql id="selectCourseVo">
        select id, title, description, cover_image, credit, course_type, start_time, end_time, 
               teacher_user_id, status, term, student_count, average_score, create_time, update_time, 
               is_deleted, delete_time
        from course
    </sql>

    <select id="selectCourseList" parameterType="Course" resultMap="CourseResult">
        <include refid="selectCourseVo"/>
        <where>
            <if test="title != null  and title != ''"> and title like concat('%', #{title}, '%')</if>
            <if test="courseType != null  and courseType != ''"> and course_type = #{courseType}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="term != null  and term != ''"> and term = #{term}</if>
            <if test="teacherUserId != null "> and teacher_user_id = #{teacherUserId}</if>
            <if test="isDeleted != null "> and is_deleted = #{isDeleted}</if>
        </where>
        order by id desc
    </select>

    <select id="selectCourseById" parameterType="Long" resultMap="CourseResult">
        <include refid="selectCourseVo"/>
        where id = #{id}
    </select>

    <insert id="insertCourse" parameterType="Course" useGeneratedKeys="true" keyProperty="id">
        insert into course
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">title,</if>
            <if test="description != null">description,</if>
            <if test="coverImage != null">cover_image,</if>
            <if test="credit != null">credit,</if>
            <if test="courseType != null">course_type,</if>
            <if test="startTime != null">start_time,</if>
            <if test="endTime != null">end_time,</if>
            <if test="teacherUserId != null">teacher_user_id,</if>
            <if test="status != null">status,</if>
            <if test="term != null">term,</if>
            <if test="studentCount != null">student_count,</if>
            <if test="averageScore != null">average_score,</if>
            <if test="isDeleted != null">is_deleted,</if>
            <if test="deleteTime != null">delete_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null and title != ''">#{title},</if>
            <if test="description != null">#{description},</if>
            <if test="coverImage != null">#{coverImage},</if>
            <if test="credit != null">#{credit},</if>
            <if test="courseType != null">#{courseType},</if>
            <if test="startTime != null">#{startTime},</if>
            <if test="endTime != null">#{endTime},</if>
            <if test="teacherUserId != null">#{teacherUserId},</if>
            <if test="status != null">#{status},</if>
            <if test="term != null">#{term},</if>
            <if test="studentCount != null">#{studentCount},</if>
            <if test="averageScore != null">#{averageScore},</if>
            <if test="isDeleted != null">#{isDeleted},</if>
            <if test="deleteTime != null">#{deleteTime},</if>
        </trim>
    </insert>

    <update id="updateCourse" parameterType="Course">
        update course
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="coverImage != null">cover_image = #{coverImage},</if>
            <if test="credit != null">credit = #{credit},</if>
            <if test="courseType != null">course_type = #{courseType},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
            <if test="endTime != null">end_time = #{endTime},</if>
            <if test="teacherUserId != null">teacher_user_id = #{teacherUserId},</if>
            <if test="status != null">status = #{status},</if>
            <if test="term != null">term = #{term},</if>
            <if test="studentCount != null">student_count = #{studentCount},</if>
            <if test="averageScore != null">average_score = #{averageScore},</if>
            <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
            <if test="deleteTime != null">delete_time = #{deleteTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCourseById" parameterType="Long">
        update course set is_deleted = 1, delete_time = now() where id = #{id}
    </delete>

    <delete id="deleteCourseByIds" parameterType="Long">
        update course set is_deleted = 1, delete_time = now() where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>

